	tipoApuesta = LEER // entero 1 รณ 10.

	// Validaciones.
	error = 0
	si (apuesta > saldo)
		ESCRIBIR ("Error: Saldo insuficiente. Su saldo actual es de $" + saldo + "." )
		error = 200
	si (numeroApuesta < 0) OR (numeroApuesta > 99)
		ESCRIBIR ("Error: Ingrese un numero entre 0 y 99.")
		error = 201
	si (tipoApuesta != 1) OR (tipoApuesta != 10)
		ESCRIBIR ("Error: Ingrese '1' para jugar a la cabeza รณ '10' para jugar a la corrida.")
		error = 202

	 
